echo '$6$MtynC604h4yOULw4$165LUXRPcENThMAUbSHtpjp2VOY34iyk1RCoY.0eqb6FqZZyMscq7yTlout0fAusPEnv7OlQl1zkoQmCe1WWU.' |pw useradd -n sysadm -m -u 1001 -g 1001 -s /usr/local/bin/bash -H 0
